<title>TinyApp</title>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">TinyApp</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav nav-pills nav-right">
        <% if (useremail) { %>
          <!-- <h5>logged in as: <%= useremail %></h5> -->
          <li role="presentation" class="active navbar-btn">
            <form method="POST" action="/logout" >
              <button class="active navbar-btn">logout</button>
            </form>
          </li>
          <li role="presentation" class="active navbar-btn">
            <a href="/urls">my links</a>
          </li>
          <li role="presentation" class="navbar-text">
            <p>logged in as <%= useremail %></p>
          </li>
        <% } else { %>
          <% if (formType === 'register') { %>
            <li role="presentation" class="active navbar-btn">
              <a href="/login">login</a>
            </li>
          <% } else { %>
            <% if (formType === 'login') { %>
              <li role="presentation" class="active navbar-btn">
                <a href="/register">register</a>
              </li>
            <% } else { %>
              <li role="presentation" class="active navbar-btn">
                <a href="/login">login</a>
              </li>
              <li role="presentation" class="active navbar-btn">
                <a href="/register">register</a>
              </li>
            <% } %>
          <% } %>
        <% } %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
